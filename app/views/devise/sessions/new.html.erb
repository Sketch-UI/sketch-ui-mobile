<div class="navigation">
    <div class="container"><img src=""/><h2>SketchUI</h2></div>
</div>

<div class="main">
  <div class="container">
    <div class="form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
      <div class="field form-group clearfix">
        <%= f.label :email, :class => 'col-sm-1' %>
        <%= f.email_field :email, autofocus: true, :class => 'col-sm-3 txtbox' %>
      </div>

      <div class="field form-group clearfix">
        <%= f.label :password, :class => 'col-sm-1' %>
        <%= f.password_field :password, autocomplete: "off", :class => 'col-sm-3 txtbox' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-group clearfix">
          <div class=" col-sm-4 col-sm-offset-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, :class => 'remember_me' %>
          </div>
        </div>
      <% end -%>

        <div class="actions col-sm-1 col-sm-offset-1">
          <%= f.submit "Log in" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  </div>

  <div class="paintbrush">
  </div>
</div>